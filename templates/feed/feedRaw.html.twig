<div class="media text-muted pt-3">
    {% set initials = stamp.user.fullName|split(' ') %}


    <div class="stamp-raw   ">
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <span class="d-block">
        <p> User
            <a href="{{ path('stamp_user', {'id': stamp.user.id}) }}">
                <strong class="text-gray-dark">@{{ stamp.user.username }}</strong>
            </a>
            has added a new stamp
            <small>Â· {{ stamp.time|date("d/m/y h:m") }}</small></span>
        </p>
        <div class="row">
            <div class="col-sm-auto">
                <a href="{{ asset('uploads/' ~stamp.image) }}" target="_blank"><img width="160" src="{{ asset('uploads/' ~stamp.image) }}"></a>
            </div>
            <div class="col-sm">
                <strong>Description:</strong> {{ stamp.description }}<br>
                <strong>Color: </strong>{{ stamp.color }}<br>
                <strong>Serial Number: </strong> {{ stamp.serialnumber }}<br>
                <strong>Country: </strong> {{ stamp.country.country }}
                {% if is_granted('edit', stamp) %}
                    <br>
                    <a class="btn btn-outline-primary" href="{{ path('stamp_edit', {'id': stamp.id}) }}">Edit</a>
                {% endif %}
                {% if is_granted('delete', stamp) %}
                    <a class="btn btn-outline-primary"  href="{{ path('stamp_delete', {'id': stamp.id}) }}">Delete</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>